						<animation effect="slide" start="0,0" end="160,0" time="0" condition="String.IsEqual(Skin.String(MenuLAF),Graph)">Conditional</animation>
						<visible>!String.IsEmpty(Skin.String(MenuLAF))</visible>
						<visible>Control.HasFocus(9000)</visible>
					</control>
					<control type="image">
						<left>10</left>
						<top>0</top>
						<width>86</width>
						<height>55</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Icon]</texture>
						<animation effect="slide" start="0,0" end="160,0" time="0" condition="String.IsEqual(Skin.String(MenuLAF),Graph)">Conditional</animation>
						<visible>!String.IsEmpty(Skin.String(MenuLAF))</visible>
						<visible>!Control.HasFocus(9000)</visible>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<label>$LOCALIZE[166] $LOCALIZE[5]</label>
						<label2>31437</label2>
						<onclick>ActivateWindow(SkinSettings)</onclick>
						<icon>Xonfluence_Logo.png</icon>
